<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gym_view_kanban" model="ir.ui.view">
       <field name="name">gym.gym.kanban</field>
       <field name="model">gym.gym</field>
       <field name="arch" type="xml">
           <kanban class="o_kanban_mobile" sample="1" quick_create="false">
<!--               <progressbar field="state"-->
<!--                   colors='{"activate": "success", "draft": "warning", "inactive": "danger"}'/>-->
               <templates>
                   <t t-name="card" class="flex-row align-items-center">
                       <aside class="col-4">
                           <field name="image" widget="image" options="{'size': [50, 50]}" alt="Icon"/>
<!--                           <field name="name" class="fw-bolder fs-5" />-->
                        </aside>
                        <main class="col ps-2">
                             <field name="name" class="fw-bolder fs-5" />
                            <field name="company_id"/>
                            <field name="address"/>
                       <div class="d-flex mb-2">


                       </div>
                        </main>
                       <footer>
<!--                           <div class="d-flex text-muted">-->

<!--                           </div>-->
                           <div>
                                <field name="state"
                               widget="label_selection"
                               options="{'classes': {'draft': 'info', 'inactive': 'default', 'activate': 'success'}}" class="ms-auto"/>
                                 <field name="rating" widget="priority" class="ms-1 text-muted fs-5"/>
                       </div>
                       </footer>
                   </t>
               </templates>
           </kanban>
       </field>
   </record>

    <record id="gym_view_list" model="ir.ui.view">
        <field name="name">gym.gym.list</field>
        <field name="model">gym.gym</field>
        <field name="arch" type="xml">
            <list string="Gyms">
                <field name="name"/>
                <field name="company_id"/>
                <field name="address"/>
                <field name="rating" widget="priority"/>
            </list>
        </field>
    </record>

    <record id="gym_view_form" model="ir.ui.view">
        <field name="name">gym.gym.form</field>
        <field name="model">gym.gym</field>
        <field name="arch" type="xml">
            <form string="Gym">
                 <header>
                     <field name="state" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                       <div name="button_box" class="oe_button_box">
                           <button class="oe_stat_button" name="%(gymnest_management.action_packages)d" type="action" icon="fa-users">
                                <field string="Packages" name="gym_package_ids" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="address"/>
                            <field name="facility_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group>
                             <field name="geolocation"/>
                             <field name="rating" widget="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Reviews">
                            <field name="review_ids" options="{'no_create': True}"/>
                        </page>
                        <page string="Gallery">
                             <field name="gallery_ids" >
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="image"/>
                                    </list>
                             </field>

                        </page>
                        <page string="Packages">
                            <field name="gym_package_ids"/>
                        </page>
                        <page string="Items">
                            <field name="item_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="action_gym_gym" model="ir.actions.act_window">
        <field name="name">Gyms</field>
        <field name="res_model">gym.gym</field>
        <field name="view_mode">kanban,list,form</field>
    </record>


    <record id="action_gym_facility" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">gym.facility</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_gym_item" model="ir.actions.act_window">
        <field name="name">Item</field>
        <field name="res_model">gym.item</field>
        <field name="view_mode">list,form</field>
    </record>

    </odoo>