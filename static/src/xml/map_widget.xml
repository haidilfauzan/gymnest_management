<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="gymnest_management.LeafletMapWidget" t-inherit="web.CharField" t-inherit-mode="primary" owl="1">
        <xpath expr="//input" position="replace">
            <div>
                <!-- PERBAIKAN: Tambahkan pemeriksaan untuk memastikan props.record.data ada sebelum diakses -->
                <input type="text" class="o_input" t-att-value="props.record and props.record.data ? (props.record.data[props.name] || '') : ''" readonly="1"/>
                <!-- Container untuk peta Leaflet -->
                <div t-ref="mapContainer" style="height: 400px; width: 100%; margin-top: 5px; border-radius: 5px;"></div>
            </div>
        </xpath>
    </t>
</templates>
